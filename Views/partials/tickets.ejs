<main>
    <div class="container">
        <h2 class="section__titulo">Compra tus boletos</h2>
        <form action="ticketsPost" method="post" role="form" enctype="multipart/form-data">
            <legend>Datos de la compra</legend>

            <select name="event" id="event">
              <option value="1">The Killers</option>
              <option value="2">Bruno Mars</option>
              <option value="3">The Chihuahua Band!</option>
              <option value="4">Coldplay</option>
            </select><br><br>
            <div class="form-group">
                <label for="">Cantidad de Tickets
                      <input type="number" value="1" class="form-control"  id="amount" name="amount"></label>
            </div>
            <div class="form-group">
                <label for="">TOTAL
                      <input type="number" class="form-control" value="1000"  id="total" name="total"></label>
            </div>
            <label for="">Método de Pago</label>
            <div class="radio">
                <label><input type="radio" checked value="1" name="optradio">Tarjeta de crédito / débito</label>
            </div>
            <div class="radio">
                <label><input type="radio" value="2" name="optradio">Paypal</label>
            </div>
            <div class="radio">
                <label><input type="radio" value="3" name="optradio">Efectivo (Oxxo)</label>
            </div>
            <br/>

            <button type="submit" class="btn btn-primary">Submit</button>
        </form>

    </div>
    <br><br>

</main>
